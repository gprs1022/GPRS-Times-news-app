<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen3"
    android:orientation="vertical"
    tools:context=".signupActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="103dp"
        android:layout_height="93dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPRS TIMES" android:layout_gravity="center"
        android:textColor="@color/red"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/transparent"
        android:background="@null"
        app:boxBackgroundColor="@color/cardview_shadow_end_color"
        app:boxCornerRadiusBottomStart="40dp"
        app:boxCornerRadiusTopEnd="40dp"
        app:helperText="Required"
        app:helperTextTextColor="#FF0000"
        app:startIconDrawable="@drawable/baseline_person_24"


        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/transparent"
            android:hint="Enter your Name"

            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@null"
        app:boxBackgroundColor="@color/cardview_shadow_end_color"
        app:boxCornerRadiusBottomStart="40dp"
        app:boxCornerRadiusTopEnd="40dp"
        app:helperText="Required"
        app:helperTextTextColor="#FF0000"

        app:startIconDrawable="@drawable/baseline_email_24"


        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmail"
            android:backgroundTint="@color/transparent"
            android:layout_width="match_parent"

            android:layout_height="60dp"
            android:hint="Enter your Mail Address"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@null"
        app:endIconMode="password_toggle"
        app:boxBackgroundColor="@color/cardview_shadow_end_color"
        app:boxCornerRadiusBottomStart="40dp"
        app:boxCornerRadiusTopEnd="40dp"
        app:helperText="Required"
        app:helperTextTextColor="#FF0000"

        app:startIconDrawable="@drawable/baseline_lock_24"


        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:backgroundTint="@color/transparent"
            android:layout_width="match_parent"

            android:layout_height="60dp"
            android:hint="Enter your Password"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@null"
        app:boxBackgroundColor="@color/cardview_shadow_end_color"
        app:boxCornerRadiusBottomStart="40dp"
        app:boxCornerRadiusTopEnd="40dp"
        app:helperText="Required"
        app:helperTextTextColor="#FF0000"
        app:startIconDrawable="@drawable/baseline_perm_identity_24"


        >

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/transparent"
            android:hint="Enter your User Name "


            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/SignUpbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#176282"
        android:text="SIGN UP" />


    <TextView
        android:id="@+id/tVsignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="If  User Already registered, SIGN IN" />

</LinearLayout>


